{
  "name": "petly-monorepo",
  "private": true,
  "scripts": {
    "dev:backend": "yarn workspace backend dev",
    "dev:mobile": "yarn workspace mobile dev",
    "dev": "concurrently \"yarn dev:backend\" \"yarn dev:mobile\"",
    "android": "yarn workspace mobile android",
    "ios": "yarn workspace mobile ios",
    "build:backend": "yarn workspace backend build",
    "start:backend": "yarn workspace backend start"
  },
  "workspaces": {
    "packages": [
      "apps/backend",
      "apps/mobile",
      "packages/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/@react-native/**",
      "**/react",
      "**/react/**"
    ]
  },
  "devDependencies": {
    "@react-native-community/cli": "latest",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.14",
    "@types/react-native": "^0.72.8",
    "concurrently": "^9.2.1"
  },
  "dependencies": {
    "@babel/runtime": "^7.28.6"
  }
}